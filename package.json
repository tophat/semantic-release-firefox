{
    "name": "semantic-release-firefox-add-on",
    "version": "0.0.1",
    "description": "A Semantic Release plugin to sign packages through the Firefox AddOn store",
    "main": "src/index.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/tophat/semantic-release-firefox-add-on.git"
    },
    "author": "Top Hat",
    "homepage": "https://github.com/tophat/semantic-release-firefox-add-on#readme",
    "license": "Apache-2.0",
    "files": [
        "lib"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/",
        "main": "lib/index.js"
    },
    "dependencies": {
        "aggregate-error": "^4.0.1",
        "husky": "^8.0.1",
        "sign-addon": "^5.1.0",
        "web-ext": "^7.3.1"
    },
    "peerDependencies": {
        "semantic-release": "^19.0.0"
    },
    "devDependencies": {
        "@monodeploy/plugin-github": "^0.6.2",
        "@tophat/commitizen-adapter": "^1.0.0",
        "@tophat/commitlint-config": "^1.0.0",
        "@tophat/conventional-changelog-config": "^1.0.1",
        "@tophat/eslint-config": "^3.3.0",
        "@types/jest": "^29.2.1",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "@yarnpkg/sdks": "^3.0.0-rc.27",
        "all-contributors-cli": "^6.24.0",
        "commitizen": "^4.2.5",
        "commitlint": "^17.2.0",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-node": "^0.3.6",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.3",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.2.2",
        "jest-mock-module": "^0.2.0",
        "jest-mock-props": "^1.9.1",
        "lint-staged": "^13.0.3",
        "memfs": "^3.4.9",
        "monodeploy": "^3.3.1",
        "prettier": "^2.7.1",
        "semantic-release": "^19.0.5",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "unionfs": "^4.4.0"
    },
    "scripts": {
        "commit": "git-cz",
        "lint": "eslint . --ext .js,.ts --max-warnings=0",
        "test": "jest --config jest.config.ts",
        "test-watch": "run test --watch",
        "test-coverage": "run test --ci --coverage --coverageDirectory artifacts/coverage",
        "test-modified": "run test --bail --findRelatedTests",
        "prepack": "rm -rf lib && run -T tsc --build ."
    },
    "commitlint": {
        "extends": [
            "@tophat/commitlint-config"
        ]
    },
    "config": {
        "commitizen": {
            "path": "@tophat/commitizen-adapter"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "yarn lint",
            "yarn test-modified"
        ],
        "yarn.lock": [
            "yarn dedupe"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.[tj]s$": [
                "ts-jest",
                {
                    "tsconfig": "tsconfig.test.json"
                }
            ]
        },
        "setupFilesAfterEnv": [
            "./tests/setup.js"
        ]
    },
    "packageManager": "yarn@3.2.4"
}
