{
    "name": "semantic-release-firefox-add-on",
    "version": "0.0.1",
    "description": "A Semantic Release plugin to sign packages through the Firefox AddOn store",
    "main": "src/index.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/tophat/semantic-release-firefox-add-on.git"
    },
    "author": "Top Hat",
    "homepage": "https://github.com/tophat/semantic-release-firefox-add-on#readme",
    "license": "Apache-2.0",
    "files": [
        "lib"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/",
        "main": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "dependencies": {
        "husky": "^8.0.1",
        "sign-addon": "^5.2.0",
        "web-ext": "^7.3.1"
    },
    "peerDependencies": {
        "semantic-release": "^19.0.0"
    },
    "devDependencies": {
        "@monodeploy/plugin-github": "^0.9.0",
        "@tophat/commitizen-adapter": "^1.0.0",
        "@tophat/commitlint-config": "^1.0.0",
        "@tophat/conventional-changelog-config": "^1.0.1",
        "@tophat/eslint-config": "^6.0.1",
        "@types/jest": "^29.2.1",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "@yarnpkg/sdks": "^3.0.0-rc.39",
        "all-contributors-cli": "^6.24.0",
        "commitizen": "^4.2.5",
        "commitlint": "^17.2.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-import-resolver-node": "^0.3.7",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.4.3",
        "jest-mock-module": "^0.2.0",
        "jest-mock-props": "^1.9.1",
        "lint-staged": "^13.1.2",
        "memfs": "^3.4.9",
        "monodeploy": "^3.7.0",
        "prettier": "^2.8.4",
        "semantic-release": "^20.1.0",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "unionfs": "^4.4.0"
    },
    "scripts": {
        "commit": "git-cz",
        "lint": "eslint . --ext .js,.ts --max-warnings=0",
        "test": "node --experimental-vm-modules $(yarn bin jest) --config jest.config.ts",
        "test-watch": "run test --watch",
        "test-coverage": "run test --ci --coverage --coverageDirectory artifacts/coverage",
        "test-modified": "run test --bail --findRelatedTests",
        "prepack": "rm -rf lib && run -T tsc --build ."
    },
    "commitlint": {
        "extends": [
            "@tophat/commitlint-config"
        ]
    },
    "config": {
        "commitizen": {
            "path": "@tophat/commitizen-adapter"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "yarn lint",
            "yarn test-modified"
        ],
        "yarn.lock": [
            "yarn dedupe"
        ]
    },
    "packageManager": "yarn@3.4.1"
}
